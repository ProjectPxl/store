<!DOCTYPE html>
<html>
  <head>
    <title>Store</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://js.stripe.com/v2/', 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to "STORE", root_path %> | 
    <%= link_to "Cart", carts_path %> | 
    <%= link_to "All Orders", orders_path %>
    <p></p>
    <% if user_signed_in? %>
      <li>
      <%= link_to current_user.email, current_user %> | 
      <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
      </li>
    <% else %>
      <li>
      <%= link_to('Login', new_user_session_path)  %>  
      </li>
    <% end %>

    <%= yield %>
    <% console %>
  </body>
</html>
